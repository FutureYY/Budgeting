    </div>

    <div id="gallery">
        <div class="item item1"><img src="../images/Transport.png" alt="Transport" height="100" width="100"><h3>Transport</h3></div>
        <div class="item item2"><img src="../images/Entertainment.png" alt="Entertainment" height="100" width="100"><h3>Entertainment</h3></div>
        <div class="item item3"><img src="../images/Technology.png" alt="Technology" height="100" width="100"><h3>Technology</h3></div>
        <div class="item item4"><img src="../images/Pets.png" alt="Pets" height="100" width="100"><h3>Pets</h3></div>
        <div class="item item5"><img src="../images/F&B.png" alt="F&B" height="100" width="100"><h3>Food & Beverages</h3></div>
        <div class="item item6"><img src="../images/Medicine.png" alt="Medical" height="100" width="100"><h3>Medical</h3></div>
        <div class="item item7"><img src="../images/gifts.png" alt="Gifts" height="100" width="100"><h3>Gifts</h3></div>
        <div class="item item8"><img src="../images/Books.png" alt="Books" height="100" width="100"><h3>Books</h3></div>
        <div class="item item9"><img src="../images/Stationery.png" alt="Stationery" height="100" width="100"><h3>Stationery</h3></div>
    </div>

    <!-- The "Others" block is placed here at the end -->
    <div class="item item10 others">
        <img src="../images/Others.png" alt="Other" height="100" width="100">
        <h3>Others</h3>
        <button class="add-button">+</button>
        <input type="text" id="new-item-input" placeholder="Add new item">
    </div>

    <script>
        document.addEventListener("DOMContentLoaded", function() {
            // Handle animation for existing items
            const items = document.querySelectorAll('.item');
            animateItemsSequentially(items);

            // Load saved items from local storage
            loadCustomItems();

            // Handle adding new custom items
            const addButton = document.querySelector('.add-button');
            const inputBox = document.getElementById('new-item-input');
            const othersItem = document.querySelector('.others');

            addButton.addEventListener('click', () => {
                othersItem.classList.toggle('active');
                inputBox.focus();
            });

            inputBox.addEventListener('keypress', (event) => {
                if (event.key === 'Enter' && inputBox.value.trim() !== '') {
                    addNewItem(inputBox.value.trim());
                    inputBox.value = '';
                    othersItem.classList.remove('active');
                }
            });
        });

        function animateItemsSequentially(items) {
            items.forEach((item, index) => {
                setTimeout(() => {
                    item.classList.add('visible');
                }, index * 200);
            });
        }

        function addNewItem(itemName) {
            const gallery = document.getElementById('gallery');
            const newItem = document.createElement('div');
            newItem.className = 'item';
            newItem.innerHTML = `
                <img src="../images/Others.png" alt="${itemName}" height="100" width="100">
                <h3>${itemName}</h3>
                <button class="delete-button">×</button>
            `;

            // Append the new item to the gallery
            gallery.appendChild(newItem);

            // Re-animate all items including the newly added one
            const allItems = document.querySelectorAll('.item');
            animateItemsSequentially(allItems);

            // Add event listener for delete button
            newItem.querySelector('.delete-button').addEventListener('click', () => {
                newItem.remove();
                removeItemFromLocalStorage(itemName);
            });

            // Move the "Others" block to the end
            const othersItem = document.querySelector('.others');
            gallery.appendChild(othersItem);

            saveItemToLocalStorage(itemName);
        }

        function saveItemToLocalStorage(itemName) {
            let customItems = JSON.parse(localStorage.getItem('customItems')) || [];
            customItems.push(itemName);
            localStorage.setItem('customItems', JSON.stringify(customItems));
        }

        function removeItemFromLocalStorage(itemName) {
            let customItems = JSON.parse(localStorage.getItem('customItems')) || [];
            customItems = customItems.filter(item => item !== itemName);
            localStorage.setItem('customItems', JSON.stringify(customItems));
        }

        function loadCustomItems() {
            const customItems = JSON.parse(localStorage.getItem('customItems')) || [];
            const gallery = document.getElementById('gallery');
            const othersItem = document.querySelector('.others');

            customItems.forEach((item, index) => {
                const newItem = document.createElement('div');
                newItem.className = 'item';
                newItem.innerHTML = `
                    <img src="../images/Others.png" alt="${item}" height="100" width="100">
                    <h3>${item}</h3>
                    <button class="delete-button">×</button>
                `;
                gallery.appendChild(newItem);

                // Add event listener for delete button
                newItem.querySelector('.delete-button').addEventListener('click', () => {
                    newItem.remove();
                    removeItemFromLocalStorage(item);
                });
            });

            // Ensure the "Others" block is at the end
            gallery.appendChild(othersItem);

            // Re-animate all items including the loaded ones
            const allItems = document.querySelectorAll('.item');
            animateItemsSequentially(allItems);
        }
    </script>
    {% endblock body %}
